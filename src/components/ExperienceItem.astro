---
import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  company: string;
  description: string[];
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <span
      class="important-color opacity-80 -left-[42px] absolute rounded-full text-5xl"
      >&bull;</span
    >

    <h3 class="text-xl font-bold important-color opacity-80">{title}</h3>
    <div class="font-semibold text-xl dark:text-gray-400 text-gray-600">
      {company}
    </div>
    <time class="p-0 m-0 text-sm dark:text-gray-400 text-gray-600">{date}</time>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-sm dark:text-gray-400 text-gray-600 md:col-span-3"
  >
    {description.map((item) => <p>{item}</p>)}
  </div>
</div>
