---
const { href } = Astro.props;
---

<a
  target="_blank"
  href={href}
  role="link"
  class="inline-flex items-center justify-center gap-2 px-3 py-2 text-base
  bg-gray-800 text-white border border-gray-700
  hover:bg-black hover:border-gray-900
  transition group max-w-fit rounded-xl focus:outline-none
  focus-visible:ring-2 focus-visible:ring-yellow-500/80"
>
  <slot />
</a>
