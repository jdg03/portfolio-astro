---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<section id={id} class={`w-full mx-auto lg:w-[740px] py-20`}>
  <h2
    class="text-black opacity-80 dark:text-white dark:opacity-90 font-bold
  text-3xl lg:text-5xl md:text-4xl
  flex flex-row justify-center
  gap-x-4"
  >
    {title}
  </h2>
  <slot />
</section>
